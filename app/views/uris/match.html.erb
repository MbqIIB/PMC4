<h1>Parsing Result</h1>

<%= @path%>


	<%= form_tag(fetch_uris_path, method: "get") do%>

    <%= text_field_tag :filter, @filter%>
     <%= hidden_field_tag :path, @path%>
     <%= hidden_field_tag :act, @act%>
             
	<%= submit_tag "Filter"%>
	<%= submit_tag "Save"%>
	
	<% end%>


<%= form_tag(save_uris_path, method: "post") do  %>
<table>
  <thead>
    <tr>
    	<th> nr </th>
      <th>Uri</th>
      <th>Location</th>      
      <th>Complete Path </th>      
      <th>Path</th>
      <th>Lfolder</th>
      <th>Name</th>    
    </tr>
  </thead>

  <tbody>
    <% i = 0
    @links.each do |link| %>
    
      <%= hidden_field_tag "path["+link[0]+"]" %>
    
      <tr> 
      	<td ><%= i = i+1 %></td>
       <td><%= link_to link[0].first(30), link[0] %></td>
       <td><%= link[1].uri if link[1] %></td>
       <td ><%= link[2]%></td>
        <td ><%= link[3]%></td>
       <td ><%= link[4]%></td>
              <td ><%= link[5]%></td>


      </tr>
    <% end %>
  </tbody>
</table>

<button id="but"> save </button>
<% end %>

