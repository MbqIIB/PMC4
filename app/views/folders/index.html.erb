<h1>Listing folders</h1>

<table>
  <thead>
    <tr>
      <th>Mpath</th>
      <th>Name</th>
           <th>Storage Id</th
     <th>Anzahl Objekte</th>

      <% @agroups.each do |agroup|%>
      <th><%=agroup.name%></th>
      <%end%>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @folders.each do |folder| %>
      <tr>

        <td><%= folder.mpath %></td>
        
        <td><%= folder.lfolder %></td>
                    <td><%= folder.storage_id%> </td>
        <td><%= @numbers[folder.id] %></td>


     
        <% @agroups.each do |agroup|%>
        <% a = [folder.id,agroup.id] %>
        <th><%=(@numbersa[a]?@numbersa[a]*100/@numbers[folder.id]:0)%></th>
        <%end%>
         
        <td><%= link_to 'Show', folder %></td>
        <td><%= link_to 'Destroy', folder , method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Index to Edit', indexedit_folders_path, method: :patch %>
