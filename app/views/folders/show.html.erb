<h1>Folder  <i class="titleName"> <%= @folder.mpath %> <%= @folder.lfolder %>  </i > 
    <%= link_to material_icon.list, folders_path %>
    <%= link_to material_icon.edit, edit_folder_path %>

</h1>


<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @folder.title %>
</p>

<p>
  <strong>Storage:</strong>
  <%= link_to @folder.storage.name, edit_storage_path(@folder.storage) %>
</p>

  <strong>Web Path</strong>
  <%= @folder.path(1) %>
 
</p>

  <strong>Orgin Path</strong>
  <%= @folder.originPath %>

</p>

  <strong>Filesystem:</strong>
  <%= @folder.path(2) %>
</p>


<p>
  <strong>Mfile:</strong>
  <%= @folder.mfile_id %>
</p>

<%= form_tag(copyFiles_folder_path(@folder) )  do %>

  <div class="actions">
    <%= hidden_field_tag :folder_id, {value: @folder.id} %>
    <%= hidden_field_tag :typ, 1 %>
    
    <%= submit_tag "Download files from Origin to active Web-Server"%>
</div>
<% end %>

<%= form_tag(copyFiles_folder_path(@folder) )  do %>

  <div class="actions">
    <%= hidden_field_tag :folder_id, {value: @folder.id} %>
    <%= hidden_field_tag :typ, 2 %>
    
    <%= submit_tag "Download files from Origin to active File-System"%>
</div>
<% end %>

<%= form_tag(generateTNs_folder_path(@folder) )  do %>

  <div class="actions">
    <%= hidden_field_tag :folder_id, {value: @folder.id} %>
    
    <%= submit_tag "Generate Thumbnails"%>
</div>
<% end %>




<%= render 'shared/mfiles' %>


<% @mfiles.each do |mfile| %>
      <div class="thumbD" id="<%=mfile.id%>" data-<%=mfile.id%>="a" 
     	class=" <% mfile.attris.each do |attri| %> <%=attri.name%> <% end %> 
             <% mfile.agroups.each do |agroup| %> <%=agroup.name%> <% end %> " >


<%= mfile.folder_id %>
        <%= mfile.filename %>

    <% end %>


