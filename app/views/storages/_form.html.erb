       <%= submit_tag("Generate Thumbnails from in Picture") %>
       <%= submit_tag("Generate Thumbnails by max height 100") %>
       <%= submit_tag("Generate Thumbnails by ...") %>
       
    <% end %>
    
 <% end %>
    