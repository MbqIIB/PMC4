<%= form_for(scanner) do |f| %>
  <% if scanner.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(scanner.errors.count, "error") %> prohibited this scanner from being saved:</h2>

      <ul>
      <% scanner.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :url %>
    <%= f.text_field :url, size: 80 %>
  </div>

  <div class="field">
    <%=  @scanner.matchS(@scanner.url) %>

  </div>

  <div class="field">
    <%= f.label :match %>
    <%= f.text_field :match, size: 80 %>
  </div>

  <div class="field">
    <%= f.label :tag %>
    <%= f.text_field :tag %>
  </div>

  <div class="field">
    <%= f.label :attr %>
    <%= f.text_field :attr %>
  </div>

  <div class="field">
    <%= f.label :pattern %>
    <%= f.text_field :pattern %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
  <div class="actions">
    <%= submit_tag "Scan" %>
  </div>

<% end %>
